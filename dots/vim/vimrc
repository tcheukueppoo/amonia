syntax on

set tabstop=3
set shiftwidth=3
set expandtab
set number
set dir=~/.vim/swaps
set encoding=utf-8
set nobackup
set nowritebackup
set nowrap
set relativenumber

set updatetime=300

call plug#begin()

"Plug 'lifepillar/vim-gruvbox8'
Plug 'tcheukueppo/xptemplate'
Plug 'vim-scripts/DrawIt'

call plug#end()

let g:xptemplate_key = '<C-n>'
let g:gruvbox_transp_bg = 1
let g:gruvbox_filetype_hi_groups = 0

set background=dark
colorscheme gruvbox8_soft

hi LineNr  ctermfg=3    ctermbg=NONE
hi Normal  ctermfg=NONE
hi Comment ctermfg=3    ctermbg=NONE cterm=NONE
hi Special                           cterm=NONE
hi String                            cterm=NONE
hi Todo                              cterm=NONE

